function player(){
  this.nom= "Mohammed"
  this.exp = 150;
  this.afficher=function(){
    var resultat = this.nom;
    return resultat;
  }
  
    this.getNom = function (){
      return nom
    }
    
    this.setNom = function(nouveau){
      nom = nouveau;
    }
}

var Mohammed = new player();

Mohammed.exp=Mohammed.exp -15;


var j = new player();
console.log(j.afficher());



j.setNom('Jackie');

console.log(j.getNom());

